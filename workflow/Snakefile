import os


envvars:
    "LD_LIBRARY_PATH",
    "PATH",
    "GUROBI_HOME",


rule io_test:
    input:
        "env_output.txt",
    output:
        "io_output.txt",
    # params:
    shell:
        """
        echo "input file was {input}" >> {output}
        echo "$(date +"%Y-%m-%d") $(date +"%H:%M:%S")" >> {output}
        echo "Current hostname: $(hostname)" >> {output}
        """


# def set_up_env(use_tunnel = True)
rule set_up_env:
    output:
        "env_output.txt",
    # params:
    shell:
        """
        echo "$(date +"%Y-%m-%d") $(date +"%H:%M:%S")" >> {output}
        echo "Current hostname: $(hostname)" >> {output}
        """
